<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_popup_small_bg">

    <TextView
        android:id="@+id/popup_full_import"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/common_horizontal_gap"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="@dimen/common_horizontal_gap"
        android:text="@string/wallet_popup_import_description"
        android:textColor="@color/common_content_primary_color"
        android:textSize="14sp"
        android:drawableStart="@drawable/wallet_import_icon"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/popup_full_import_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/common_line_height"
        android:background="@color/common_line_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_full_import"/>

    <TextView
        android:id="@+id/popup_full_backup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_line_height"
        android:gravity="center"
        android:paddingBottom="@dimen/common_horizontal_gap"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="@dimen/common_horizontal_gap"
        android:text="@string/wallet_popup_backup_description"
        android:textColor="@color/common_content_primary_color"
        android:textSize="14sp"
        android:drawableStart="@drawable/wallet_backup_icon"
        android:drawablePadding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_full_import"/>

    <View
        android:id="@+id/popup_backup_notice"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/common_figure_badge_bg"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/popup_full_backup"
        app:layout_constraintTop_toTopOf="@id/popup_full_backup"/>

    <View
        android:id="@+id/popup_full_backup_line"
        android:layout_width="0dp"
        android:layout_height="@dimen/common_line_height"
        android:background="@color/common_line_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_full_backup"/>

    <TextView
        android:id="@+id/popup_full_setting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/common_horizontal_gap"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="@dimen/common_horizontal_gap"
        android:text="@string/wallet_popup_setting_description"
        android:textColor="@color/common_content_primary_color"
        android:textSize="14sp"
        android:drawableStart="@drawable/wallet_setting_icon"
        android:drawablePadding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/popup_full_backup"/>

</androidx.constraintlayout.widget.ConstraintLayout>