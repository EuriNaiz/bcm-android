<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/fee_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffeeeeee"
        android:gravity="center"
        android:text="@string/wallet_transfer_fee_choose_title"
        android:textColor="@color/common_color_black"
        android:textSize="12sp"/>

    <View
        android:id="@+id/fee_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:background="@color/common_color_e8e8e8"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fee_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>

</LinearLayout>