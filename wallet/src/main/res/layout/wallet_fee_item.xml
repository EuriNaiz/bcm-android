<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/fee_name"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:gravity="center"
        android:text="@string/wallet_transfer_fee_high_description"
        android:textColor="?attr/common_text_secondary_color"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/fee_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:src="@drawable/wallet_selected_icon"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/fee_name"
        app:layout_constraintBottom_toBottomOf="@id/fee_name"
        tools:visibility="visible"/>

    <View
        android:id="@+id/fee_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_line_height"
        android:background="?attr/common_item_line_color"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>