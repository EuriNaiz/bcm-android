<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 钱包密码样式 -->
    <style name="WalletPasswordStyle">
        <item name="android:textColor">?attr/common_text_secondary_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">#C2C2C2</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- 钱包的地址的样式 -->
    <style name="WalletAddressCopyStyle">
        <item name="android:background">@drawable/wallet_address_copy_bg_selector</item>
        <item name="android:textColor">?attr/common_activity_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/common_vertical_gap</item>
    </style>

    <!-- 交易详情页面每一项layout的样式 -->
    <style name="WalletTransactionRecordLayoutStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/common_vertical_gap</item>
        <item name="android:paddingBottom">@dimen/common_vertical_gap</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 交易详情页面每一项head的样式 -->
    <style name="WalletTransactionRecordHeadStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?attr/common_text_third_color</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>

    </style>

    <!-- 交易详情页面每一项value的样式 -->
    <style name="WalletTransactionRecordValueStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/common_text_secondary_color</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>

    </style>

    <!-- 交易确认窗每一项layout的样式 -->
    <style name="WalletTransactionConfirmLayoutStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/common_vertical_gap</item>
        <item name="android:paddingBottom">@dimen/common_vertical_gap</item>
        <item name="android:paddingStart">@dimen/common_horizontal_gap</item>
        <item name="android:paddingEnd">@dimen/common_horizontal_gap</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 交易确认窗口每一项head的样式 -->
    <style name="WalletTransactionConfirmHeadStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/common_text_secondary_color</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>

    </style>

    <!-- 交易确认窗口每一项value的样式 -->
    <style name="WalletTransactionConfirmValueStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/common_text_main_color</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>

    </style>
</resources>