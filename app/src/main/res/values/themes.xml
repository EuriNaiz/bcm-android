<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Launch" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowAnimationStyle">@style/notAnimation</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.Launch.black" parent="AppTheme.Launch">
        <item name="android:windowBackground">@drawable/launch_background_black</item>
    </style>

    <style name="AppTheme.Launch.white" parent="AppTheme.Launch">
        <item name="android:windowBackground">@drawable/launch_background_white</item>
    </style>

    <style name="notAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>

</resources>