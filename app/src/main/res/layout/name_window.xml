<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@id/container"
                                             android:orientation="vertical"
                                             android:layout_width="315dp"
                                             android:layout_height="172dp"
                                             android:layout_gravity="center"
                                             android:background="@drawable/common_toast_bg">

    <TextView
        android:id="@+id/name_remind_change"
        android:layout_width="275dp"
        android:layout_height="23dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/hint_pick_nickname"
        android:textColor="@color/common_color_black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/name_remind_edit"
        android:layout_width="285dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/name_edit_bg"
        android:gravity="center"
        android:hint="@string/hint_input_nickname"
        android:textColorHint="#C2C2C2"
        android:lines="1"
        android:textColor="#131313"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_remind_change"/>

    <TextView
        android:id="@+id/name_change_later"
        android:layout_width="135dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/white_button_bg"
        android:text="@string/str_later"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/common_color_379BFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/name_pick_one"
        android:layout_width="135dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/blue_button_bg"
        android:text="@string/str_confirm"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="@color/common_color_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>