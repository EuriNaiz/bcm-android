<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/tabless_bg_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tabless_text"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/tabless_indicator_1"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/selector_intro_indicator" />

        <View
            android:id="@+id/tabless_indicator_2"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginEnd="7dp"
            android:background="@drawable/selector_intro_indicator" />

        <View
            android:id="@+id/tabless_indicator_3"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/selector_intro_indicator" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>