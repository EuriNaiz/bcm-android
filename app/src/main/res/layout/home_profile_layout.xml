<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/home_profile_status_fill"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home_profile_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:src="@drawable/home_icon_profile_fold_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_profile_status_fill" />

    <ImageView
        android:id="@+id/home_profile_keybox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/common_item_ripple_oval_transparent_bg"
        android:scaleType="centerInside"
        android:src="@drawable/home_icon_profile_keybox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_profile_status_fill" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_profile_top_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="60dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_profile_avatar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@id/home_profile_func_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_profile_top_line">

        <com.bcm.messenger.common.ui.RecipientAvatarView
            android:id="@+id/home_profile_avatar"
            android:layout_width="160dp"
            android:layout_height="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.bcm.messenger.ui.widget.HomeAvatarBadgeView
            android:id="@+id/home_profile_unread"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:minWidth="27dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="@id/home_profile_avatar"
            app:layout_constraintTop_toTopOf="@id/home_profile_avatar" />

        <com.bcm.messenger.common.ui.emoji.EmojiTextView
            android:id="@+id/home_profile_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/common_color_black"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_profile_avatar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_profile_name">

            <ImageView
                android:id="@+id/home_profile_qr"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/common_item_ripple_oval_bg"
                android:scaleType="centerInside"
                android:src="@drawable/home_icon_profile_qr_code"
                app:layout_constraintEnd_toStartOf="@id/home_profile_more"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/home_profile_more"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/common_item_ripple_oval_bg"
                android:scaleType="centerInside"
                android:src="@drawable/home_icon_profile_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/home_profile_qr"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/home_profile_backup_icon"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/common_not_backup_icon"
                app:layout_constraintTop_toTopOf="@id/home_profile_more"
                app:layout_constraintEnd_toEndOf="@id/home_profile_more"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/home_profile_func_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/home_profile_bottom_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_profile_avatar_layout">

        <TextView
            android:id="@+id/home_profile_wallet"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginEnd="32dp"
            android:drawableTop="@drawable/home_icon_profile_wallet"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/chats_more_wallet_title"
            android:textColor="@color/common_color_black"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/home_profile_air_chat"
            app:layout_constraintEnd_toStartOf="@id/home_profile_data_vault"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_profile_avatar_layout" />

        <TextView
            android:id="@+id/home_profile_data_vault"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginEnd="32dp"
            android:drawableTop="@drawable/home_icon_profile_data_vault"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/chats_more_data_vault_title"
            android:textColor="@color/common_color_black"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/home_profile_air_chat"
            app:layout_constraintEnd_toStartOf="@id/home_profile_settings"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/home_profile_wallet"
            app:layout_constraintTop_toBottomOf="@id/home_profile_qr" />

        <TextView
            android:id="@+id/home_profile_settings"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:drawableTop="@drawable/home_icon_profile_settings"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="@string/chats_more_settings_title"
            android:textColor="@color/common_color_black"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/home_profile_bottom_line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/home_profile_data_vault"
            app:layout_constraintTop_toBottomOf="@id/home_profile_qr" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/home_profile_bottom_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="60dp"/>

    <TextView
        android:id="@+id/home_profile_air_chat"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:drawableTop="@drawable/home_icon_profile_air_chat"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="@string/chats_more_airchat_title"
        android:textColor="@color/common_color_606060"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>