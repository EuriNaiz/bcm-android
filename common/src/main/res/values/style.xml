<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="CommonWindowStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_color_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="common_popwindow_anim_style" parent="CommonWindowStyle">
        <item name="android:windowEnterAnimation">@anim/common_popup_drop_in</item>
        <item name="android:windowExitAnimation">@anim/common_popup_drop_out</item>
    </style>

    <style name="CommonLoadingStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_color_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="CommonTipStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_color_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CommonBottomPopupWindow" parent="CommonLoadingStyle">
        <item name="android:windowEnterAnimation">@anim/common_slide_from_bottom_fast</item>
        <item name="android:windowExitAnimation">@anim/common_slide_to_bottom_fast</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CommonBottomAnimPopupWindow" parent="CommonLoadingStyle">
        <item name="android:windowEnterAnimation">@anim/common_slide_from_bottom_fast</item>
        <item name="android:windowExitAnimation">@anim/common_slide_to_bottom_fast</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="CommonPickerPopupWindow" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowEnterAnimation">@anim/common_slide_from_bottom_fast</item>
        <item name="android:windowExitAnimation">@anim/common_slide_to_bottom_fast</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_color_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:editTextColor">@color/common_color_black</item>
    </style>

    <style name="CommonCenterPopupWindow" parent="CommonLoadingStyle">
        <item name="android:windowEnterAnimation">@anim/common_popup_drop_in</item>
        <item name="android:windowExitAnimation">@anim/common_popup_drop_out</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CommonDropWindowAnimation" >
        <item name="android:windowEnterAnimation">@anim/common_popup_drop_in</item>
        <item name="android:windowExitAnimation">@anim/common_popup_drop_out</item>
    </style>

    <style name="CommonAlphaWindowAnimation">
        <item name="android:windowEnterAnimation">@anim/common_popup_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/common_popup_alpha_out</item>
    </style>

    <style name="CommonPrimaryTextBgStyle">
        <item name="android:background">@drawable/common_primary_thick_round_selector</item>
        <item name="android:textColor">?attr/common_activity_background</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonPrimaryThinTextBgStyle">
        <item name="android:background">@drawable/common_primary_thin_round_selector</item>
        <item name="android:textColor">?attr/common_text_blue_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonBlackThinTextBgStyle">
        <item name="android:background">@drawable/common_black_thin_round_selector</item>
        <item name="android:textColor">@color/common_color_black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonPrimaryBigTextStyle" parent="CommonPrimaryTextBgStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>

    <style name="CommonPrimaryThinBigTextStyle" parent="CommonPrimaryThinTextBgStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">11dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
    </style>

    <!-- Password style -->
    <style name="CommonImportantEditStyle">
        <item name="android:textColor">?attr/common_secondary_blue_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorHint">?attr/common_text_third_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/common_rectangle_8_bg</item>
    </style>

    <style name="ForwardDialogStyle" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_color_transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="CommonTitleBarStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="fill_status_bar">true</item>
        <item name="show_bottom_line">false</item>
        <item name="title_bar_background">?attr/common_view_background</item>
        <item name="title_bar_height">52dp</item>

        <item name="left_type">image</item>
        <item name="left_image">@drawable/common_arrow_back_icon</item>
        <item name="left_image_color">?attr/common_title_bar_left_icon_color</item>
        <item name="left_text_size">17sp</item>
        <item name="left_text_color">?attr/common_text_main_color</item>

        <item name="right_type">none</item>
        <item name="right_text_size">17sp</item>
        <item name="right_text_color">?attr/common_text_main_color</item>

        <item name="center_type">text</item>
        <item name="center_text_color">?attr/common_text_main_color</item>
        <item name="center_text_size">17sp</item>
    </style>

    <style name="CommonBlueButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/common_rectangle_8_blue_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonLightBlueButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/common_button_blue_light_bg</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CommonEditTextView" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">45dp</item>
        <item name="android:layout_marginEnd">45dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/common_text_main_color</item>
        <item name="android:textColorHint">?attr/common_text_third_color</item>
        <item name="android:textCursorDrawable">@drawable/common_blue_color_cursor</item>
        <item name="android:background">@drawable/common_edit_border_normal</item>
    </style>
</resources>