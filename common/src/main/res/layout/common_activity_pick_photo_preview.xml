<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/common_color_black">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pick_photo_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_color_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.bcm.messenger.common.ui.CommonTitleBar2
        android:id="@+id/pick_photo_preview_title_bar"
        style="@style/CommonTitleBarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:right_type="text"
        app:right_text_color="@color/common_app_primary_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>