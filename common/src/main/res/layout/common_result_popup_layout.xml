<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/common_result_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/common_result_light_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/common_toast_bg"
        android:orientation="vertical"
        android:minWidth="120dp"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/common_result_light_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/common_tick_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/common_result_light_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="@string/common_done"
            android:textColor="@color/common_color_black"
            android:textSize="16sp"
            tools:text="Test"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/common_result_dark_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="120dp"
        android:gravity="center_horizontal"
        android:background="@drawable/common_toast_bg_heavy"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/common_result_dark_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            tools:src="@drawable/common_tick_icon"/>

        <TextView
            android:id="@+id/common_result_dark_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/common_done"
            android:textColor="@color/common_color_white"
            android:textSize="17sp"
            tools:text="Test"/>

    </LinearLayout>

</RelativeLayout>