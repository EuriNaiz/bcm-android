<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/share_title"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/common_popup_bg"
        android:gravity="center"
        android:text="@string/common_invite_share_title"
        android:textColor="?attr/common_text_secondary_color"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?attr/common_item_line_color" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/share_app_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/common_view_background_grey"
        android:paddingStart="20dp"
        android:paddingTop="5dp"
        android:paddingEnd="20dp" />

    <com.bcm.messenger.common.ui.CommonIndicatorView
        android:id="@+id/share_indicator"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="?attr/common_view_background_grey"
        android:gravity="center"
        android:orientation="horizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="?attr/common_item_line_color" />

    <TextView
        android:id="@+id/share_cancel"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/common_item_ripple_dark_grey_bg"
        android:gravity="center"
        android:text="@string/common_cancel"
        android:textColor="?attr/common_text_main_color"
        android:textSize="17sp" />
</LinearLayout>