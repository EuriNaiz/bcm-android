<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content"
                                             android:paddingStart="@dimen/common_horizontal_gap"
                                             android:paddingEnd="10dp"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools">

    <com.bcm.messenger.common.ui.RecipientAvatarView
        android:id="@+id/recent_content_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.bcm.messenger.common.ui.emoji.EmojiTextView
        android:id="@+id/recent_content_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="13sp"
        android:textColor="?attr/common_text_main_color"
        android:layout_marginTop="10dp"
        android:maxWidth="60dp"
        app:layout_constraintTop_toBottomOf="@id/recent_content_photo"
        app:layout_constraintStart_toStartOf="@id/recent_content_photo"
        app:layout_constraintEnd_toEndOf="@id/recent_content_photo"
        tools:text="TestTestTestTestTestTestTest"/>

</androidx.constraintlayout.widget.ConstraintLayout>