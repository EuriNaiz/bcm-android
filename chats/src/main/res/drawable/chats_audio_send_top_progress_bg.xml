<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/chats_conversation_item_radius"/>
            <solid android:color="?attr/chats_conversation_outgo_background_color"/>
        </shape>
    </item>

    <item android:id="@android:id/progress">

        <clip>
            <shape>
                <corners android:radius="@dimen/chats_conversation_item_radius"/>
                <solid android:color="?chats_conversation_audio_progress_outgo_color"/>
            </shape>
        </clip>

    </item>

</layer-list>