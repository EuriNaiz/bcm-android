<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid android:color="?attr/common_activity_background_grey"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:dashWidth="1dp" android:color="?attr/common_activity_background_grey"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="?attr/common_view_background"/>
            <corners android:radius="8dp"/>
            <stroke android:width="1dp" android:dashWidth="1dp" android:color="?attr/common_view_background"/>
        </shape>
    </item>
</selector>