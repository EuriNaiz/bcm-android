<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?attr/common_ripple_color">
    <item>
        <selector>
            <item android:state_enabled="true">
                <shape>
                    <solid android:color="?attr/chats_conversation_income_button_background_color"/>
