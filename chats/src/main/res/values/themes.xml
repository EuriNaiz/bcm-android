        <item name="chats_conversation_media_progress_outgo_color">@color/chats_media_progress_outgo_color</item>
        <item name="chats_conversation_media_progress_income_color">@color/chats_media_progress_income_color</item>
        <item name="chats_conversation_outgo_background_color">@color/chats_message_outgo_background_color</item>
