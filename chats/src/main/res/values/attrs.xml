<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="chats_BubbleLayout">
        <attr name="chats_lookAt">
            <enum name="left" value="1"/>
            <enum name="top" value="2"/>
            <enum name="right" value="3"/>
            <enum name="bottom" value="4"/>
        </attr>

        <attr name="chats_lookPosition" format="dimension"/>
        <attr name="chats_lookWidth" format="dimension"/>
        <attr name="chats_lookLength" format="dimension"/>
        <attr name="chats_bubbleColor" format="color"/>
        <attr name="chats_bubbleRadius" format="dimension"/>
        <attr name="chats_bubblePadding" format="dimension"/>
        <attr name="chats_shadowRadius" format="dimension"/>
        <attr name="chats_shadowX" format="dimension"/>
        <attr name="chats_shadowY" format="dimension"/>
        <attr name="chats_shadowColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="chats_conversationInputPanelStyle">
        <attr name="chats_isGroup" format="boolean" />
    </declare-styleable>
    <declare-styleable name="chats_historyInnerViewStyle">
        <attr name="chats_inView">
            <enum name="forward" value="1" />
            <enum name="chat_send" value="2" />
            <enum name="chat_receive" value="3" />
        </attr>
        <attr name="chats_textSize" format="dimension" />
    </declare-styleable>

    <!-- Conversations -->
    <attr name="chats_conversation_audio_progress_outgo_color" format="color" />
    <attr name="chats_conversation_audio_progress_income_color" format="color" />
    <attr name="chats_conversation_media_progress_outgo_color" format="color" />
    <attr name="chats_conversation_media_progress_income_color" format="color" />
    <attr name="chats_conversation_outgo_background_color" format="color" />
    <attr name="chats_conversation_income_background_color" format="color" />
    <attr name="chats_conversation_income_text_color" format="color" />
    <attr name="chats_conversation_income_icon_color" format="color" />
    <attr name="chats_conversation_outgo_icon_color" format="color" />
    <attr name="chats_conversation_outgo_text_secondary_color" format="color" />
    <attr name="chats_conversation_outgo_button_background_color" format="color" />
    <attr name="chats_conversation_income_button_background_color" format="color" />
    
    <!-- Media Browser -->
    <attr name="chats_media_browser_tab_selected_background" format="color" />
    <attr name="chats_media_browser_tab_unselected_background" format="color" />
    <attr name="chats_media_browser_text_selected_color" format="color" />
    <attr name="chats_media_browser_text_unselected_color" format="color" />

    <!-- Forward Dialog -->
    <attr name="chats_forward_dialog_background" format="color" />
    <attr name="chats_forward_dialog_detail_background" format="color" />
</resources>