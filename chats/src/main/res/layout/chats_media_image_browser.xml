<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/media_browser_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"/>

    <FrameLayout
        android:id="@+id/no_content_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/common_view_background_grey"
        android:visibility="gone">

        <TextView
            android:id="@+id/no_content_txt"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="?attr/common_text_secondary_color"
            android:background="?attr/common_view_background"
            android:text="@string/chats_media_browser_no_content" />
    </FrameLayout>
</RelativeLayout>
