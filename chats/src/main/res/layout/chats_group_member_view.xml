<?xml version="1.0" encoding="utf-8"?>
<com.bcm.messenger.chats.components.GroupMemberView xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="93dp"
                                             android:focusable="true"
                                             android:background="@drawable/common_item_ripple_transparent_bg"
                                             android:orientation="vertical"
                                             android:gravity="center_horizontal">

    <com.bcm.messenger.common.ui.GroupMemberPhotoView
        android:id="@+id/group_member_avatar"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="1.7dp"
        />

    <TextView
        android:id="@+id/group_member_actor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="60dp"
        android:ellipsize="end"
        android:gravity="center"
        android:text="@string/chats_group_actor_creator"
        android:textColor="?attr/common_button_blue_color"
        android:textSize="10sp"/>

    <com.bcm.messenger.common.ui.emoji.EmojiTextView
        android:id="@+id/group_member_nickname"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="ABC"
        android:ellipsize="end"
        android:textColor="?attr/common_text_main_color"
        android:textSize="10sp"
        />

</com.bcm.messenger.chats.components.GroupMemberView>
