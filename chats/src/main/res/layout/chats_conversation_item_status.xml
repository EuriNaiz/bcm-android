<?xml version="1.0" encoding="utf-8"?>
<com.bcm.messenger.chats.components.ConversationStatusItem xmlns:android="http://schemas.android.com/apk/res/android"
                                                           xmlns:tools="http://schemas.android.com/tools"
                                                           android:id="@+id/conversation_update_item"
                                                           android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:focusable="true"
                                                           android:gravity="center"
                                                           android:orientation="horizontal"
                                                           android:paddingLeft="30dp"
                                                           android:paddingRight="30dp"
                                                           android:paddingTop="5dp"
                                                           android:paddingBottom="5dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/chats_conversation_tip_vertical_padding"
        android:paddingLeft="@dimen/chats_conversation_tip_horizontal_padding"
        android:paddingRight="@dimen/chats_conversation_tip_horizontal_padding"
        android:paddingTop="@dimen/chats_conversation_tip_vertical_padding">

        <ImageView
            android:id="@+id/conversation_update_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="3dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/conversation_update_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/common_color_A8A8A8"
            android:textSize="13sp"
            tools:text="Sasha called you" />

