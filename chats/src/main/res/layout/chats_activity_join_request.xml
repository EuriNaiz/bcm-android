<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <com.bcm.messenger.common.ui.CommonTitleBar2
        android:id="@+id/title_bar"
        style="@style/CommonTitleBarStyle"
        app:center_text="@string/chats_group_join_request_activity_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:right_text="@string/chats_group_join_request_action"
        app:right_text_color="@color/common_app_primary_color"
        app:right_type="text" />

    <TextView
        android:id="@+id/request_notice_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/chats_group_join_request_notice"
        android:textSize="13sp"
        android:textColor="@color/common_content_second_color"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/common_horizontal_gap"
        android:layout_marginEnd="@dimen/common_horizontal_gap"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Send a friend request to XXXXX."/>

    <com.bcm.messenger.common.ui.ClearButtonEditText
        android:id="@+id/request_memo_input"
        style="@null"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:gravity="left|center_vertical"
        android:background="@drawable/common_grey_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:minHeight="44dp"
        android:paddingStart="15dp"
        android:paddingTop="12dp"
        android:paddingEnd="15dp"
        android:paddingBottom="12dp"
        android:textColor="@color/common_color_black"
        android:textSize="16sp"
        app:clearButtonHeight="12dp"
        app:clearButtonPadding="10dp"
        app:clearButtonWidth="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/request_notice_tv"
        app:paddingEnd="15dp"
        app:showClearButton="false"
        tools:text="text" />

</androidx.constraintlayout.widget.ConstraintLayout>