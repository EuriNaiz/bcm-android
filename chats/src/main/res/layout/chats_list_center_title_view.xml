<?xml version="1.0" encoding="utf-8"?>
<com.bcm.messenger.chats.thread.MessageListTitleView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <com.bcm.messenger.common.ui.emoji.EmojiTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:textSize="20sp" />

    <com.bcm.messenger.common.ui.emoji.EmojiTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:textSize="20sp" />

</com.bcm.messenger.chats.thread.MessageListTitleView>