<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/layout_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#B3000000"
    android:orientation="vertical"
    android:clickable="true"
    android:clipChildren="false"
    android:clipToPadding="false">

    <com.bcm.messenger.chats.components.titlebar.ChatTitleBar
        android:id="@+id/chat_guide_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/common_view_background_dark_grey"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/chat_guide_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chats_conversation_guide_tab"
        android:scaleType="center"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="@id/chat_guide_title_bar"
        app:layout_constraintEnd_toEndOf="@id/chat_guide_title_bar"
        app:layout_constraintBottom_toBottomOf="@id/chat_guide_title_bar"/>

    <LinearLayout
        android:id="@+id/chat_guide_drop_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="?attr/common_view_background_dark_grey"
        app:layout_constraintTop_toBottomOf="@id/chat_guide_title_bar"/>

    <LinearLayout
        android:id="@+id/chat_guide_arrow_layout"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        android:orientation="horizontal"
        android:paddingTop="90dp"
        android:paddingEnd="16.8dp"
        android:paddingStart="16.8dp"
        android:gravity="center"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toBottomOf="@id/chat_guide_drop_menu">
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/chat_guide_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/common_arrow_upward"
            android:visibility="invisible"
            android:layout_weight="1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/chat_guide_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:visibility="invisible"
            android:src="@drawable/common_arrow_upward"
            android:layout_weight="1"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/chat_guide_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:src="@drawable/common_arrow_upward"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="@id/chat_guide_arrow_layout"
        app:layout_constraintEnd_toEndOf="@id/chat_guide_arrow_layout"
        app:layout_constraintBottom_toBottomOf="@id/chat_guide_arrow_layout"/>

    <TextView
        android:id="@+id/chats_guide_tip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="60dp"
        android:gravity="center_horizontal"
        android:textColor="@color/common_color_white"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:text="@string/chats_tap_friend_s_name_above_for_the_quick_menu"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/chat_guide_arrow_layout"
        app:layout_constraintBottom_toTopOf="@id/chat_guide_next"/>

    <Button
        android:id="@+id/chat_guide_next"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="40dp"
        android:textAllCaps="false"
        android:textColor="@color/common_color_white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text= "@string/common_next"
        android:background="@drawable/chats_white_thin_round_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
