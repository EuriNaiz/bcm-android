<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/bottom_pannel_item"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center"
        android:layout_marginEnd="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        android:elevation="2dp"
        android:background="@drawable/common_item_ripple_oval_transparent_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bottom_panel_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/common_color_606060"
        app:layout_constraintStart_toStartOf="@id/bottom_pannel_item"
        app:layout_constraintEnd_toEndOf="@id/bottom_pannel_item"
        app:layout_constraintTop_toBottomOf="@id/bottom_pannel_item"/>
</androidx.constraintlayout.widget.ConstraintLayout>


