<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:paddingTop="5dp"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/conversation_selected"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:button="@null"
        android:checked="false"
        android:visibility="gone"
        android:drawableStart="@drawable/common_circle_checkbox"
        android:drawablePadding="0dp"
        android:includeFontPadding="true"
        android:enabled="false"
        android:clickable="false"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <com.bcm.messenger.common.ui.IndividualAvatarView
        android:id="@+id/conversation_recipient_photo"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/conversation_selected"/>

    <com.bcm.messenger.common.ui.emoji.EmojiTextView
        android:id="@+id/conversation_recipient_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/common_content_second_color"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:gravity="left"
        app:layout_constraintStart_toEndOf="@+id/conversation_recipient_photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="+14152222222"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/common_horizontal_gap"
        android:paddingStart="0dp"
        android:paddingTop="5dp"
        android:gravity="start"
        app:layout_constraintStart_toStartOf="@id/conversation_recipient_name"
        app:layout_constraintTop_toBottomOf="@id/conversation_recipient_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/conversation_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ViewStub
                android:id="@+id/conversation_message"
                android:inflatedId="@+id/conversation_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout="@layout/chats_received_message_item" />

            <ViewStub
                android:id="@+id/conversation_link"
                android:inflatedId="@+id/conversation_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout="@layout/chats_received_message_item" />

            <ViewStub
                android:id="@+id/conversation_not_support"
                android:inflatedId="@+id/conversation_not_support"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout="@layout/chats_received_message_item" />

            <ViewStub
                android:id="@+id/conversation_audio"
                android:inflatedId="@+id/conversation_audio"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/chats_conversation_audio_item_height"
                android:layout="@layout/chats_received_audio_item" />

            <ViewStub
                android:id="@+id/conversation_thumbnail"
                android:inflatedId="@+id/conversation_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout="@layout/chats_received_thumbnail_item"
                />
            <ViewStub
                android:id="@+id/conversation_document"
                android:inflatedId="@+id/conversation_document"
                android:layout_width="@dimen/chats_conversation_default_bubble_width"
                android:layout_height="wrap_content"
                android:layout="@layout/chats_received_document_item"
                />

            <ViewStub
                android:id="@+id/conversation_channel"
                android:inflatedId="@+id/conversation_channel"
                android:layout_width="@dimen/chats_conversation_default_bubble_width"
                android:layout_height="wrap_content"
                android:layout="@layout/chats_received_link_item"
                />
            <ViewStub
                android:id="@+id/conversation_video"
                android:inflatedId="@+id/conversation_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout="@layout/chats_received_thumbnail_item"
                />
            <ViewStub
                android:id="@+id/conversation_location"
                android:inflatedId="@+id/conversation_location"
                android:layout_width="@dimen/chats_conversation_default_bubble_width"
                android:layout_height="wrap_content"
                android:layout="@layout/chats_received_location_item"
                />

            <ViewStub
                android:id="@+id/conversation_contact"
                android:inflatedId="@+id/conversation_contact"
                android:layout_width="@dimen/chats_conversation_long_bubble_width"
                android:layout_height="wrap_content"
                android:layout="@layout/chats_contact_item"
                />

            <ViewStub
                android:id="@+id/conversation_history"
                android:layout_width="235dp"
                android:layout_height="wrap_content"
                android:inflatedId="@+id/conversation_history"
                android:layout="@layout/chats_received_history_item"/>

            <ViewStub
                android:id="@+id/conversation_reply"
                android:inflatedId="@+id/conversation_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout="@layout/chats_received_reply_message_item" />

            <ViewStub
                android:id="@+id/conversation_group_share"
                android:inflatedId="@+id/conversation_group_share"
                android:layout_width="@dimen/chats_conversation_long_bubble_width"
                android:layout_height="wrap_content"
                android:layout="@layout/chats_group_share_card_item"/>

        </LinearLayout>

        <com.bcm.messenger.chats.components.AlertView
            android:id="@+id/indicators_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:gravity="start|center_vertical"
            android:orientation="vertical"
            android:padding="6dp"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

    <View
        android:id="@+id/conversation_cell_click_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
