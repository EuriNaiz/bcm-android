<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.bcm.messenger.common.ui.CommonTitleBar2
        android:id="@+id/new_chat_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:left_type="image"
        app:left_image="@drawable/common_close_icon"
        app:right_type="text"
        app:right_text="@string/chats_new_group_chat"
        app:center_text="@string/chats_new_chat" />

    <FrameLayout
        android:id="@+id/new_chat_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>