<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.bcm.messenger.common.ui.CommonLoadingView
        android:id="@+id/stick_notify_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.bcm.messenger.common.ui.emoji.EmojiTextView
        android:id="@+id/stick_notify_text_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/common_rectangle_8_bg"
        android:gravity="center"
        android:paddingStart="@dimen/common_horizontal_gap"
        android:paddingTop="@dimen/common_vertical_gap"
        android:paddingEnd="@dimen/common_horizontal_gap"
        android:paddingBottom="@dimen/common_vertical_gap"
        android:singleLine="false"
        android:textColor="?attr/common_text_secondary_color"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/stick_notify_loading"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" />

    <com.bcm.messenger.common.ui.emoji.EmojiTextView
        android:id="@+id/stick_notify_text_two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/common_rectangle_8_bg"
        android:gravity="center"
        android:paddingStart="@dimen/common_horizontal_gap"
        android:paddingTop="@dimen/common_vertical_gap"
        android:paddingEnd="@dimen/common_horizontal_gap"
        android:paddingBottom="@dimen/common_vertical_gap"
        android:singleLine="false"
        android:textColor="?attr/common_text_secondary_color"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/stick_notify_text_one"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa" />

</merge>