<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/input_pin_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <com.bcm.messenger.common.ui.CommonTitleBar2
        android:id="@+id/ban_reset_title_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:center_text="@string/me_change_password"
        app:right_image="@drawable/common_info_black_icon"
        app:right_type="image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/ban_reset_logo"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/me_ban_reset_logo_icon"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/ban_reset_title_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/ban_reset_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_horizontal_gap"
        android:layout_marginStart="@dimen/common_horizontal_gap"
        android:layout_marginTop="60dp"
        android:text="@string/me_ban_reset_password_title"
        android:textColor="?attr/common_text_main_color"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ban_reset_logo" />

    <TextView
        android:id="@+id/ban_reset_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/me_ban_reset_password_content"
        android:textColor="?attr/common_text_third_color"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ban_reset_title" />


    <TextView
        android:id="@+id/ban_reset_back_btn"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:background="@drawable/common_button_blue_bg"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:gravity="center"
        android:text="@string/me_ban_reset_back_action"
        android:textColor="?attr/common_text_white_color"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>