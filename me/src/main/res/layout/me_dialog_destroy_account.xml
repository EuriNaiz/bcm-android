<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_center_popup_background">

    <TextView
        android:id="@+id/destroy_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/me_destroy_account_str"
        android:textColor="?attr/common_text_main_color"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/distroy_dialog_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/me_destroy_account_content"
        android:textColor="?attr/common_text_main_color"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/destroy_dialog_title" />

    <TextView
        android:id="@+id/destroy_dialog_checkbox"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/common_circle_checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distroy_dialog_content" />

    <TextView
        android:id="@+id/destroy_dialog_notice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="23dp"
        android:includeFontPadding="false"
        android:text="@string/me_destroy_account_notice"
        android:textAlignment="viewStart"
        android:textColor="?attr/common_text_secondary_color"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/destroy_dialog_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/distroy_dialog_content" />

    <Button
        android:id="@+id/destroy_dialog_confirm"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/me_destroy_confirm_selector"
        android:ellipsize="middle"
        android:enabled="false"
        android:minWidth="135dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:singleLine="true"
        android:text="@string/common_confirm_ok_text"
        android:textAllCaps="false"
        android:textColor="?attr/common_background_color"
        android:textSize="17sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/destroy_dialog_cancel"
        app:layout_constraintTop_toBottomOf="@+id/destroy_dialog_notice" />

    <Button
        android:id="@+id/destroy_dialog_cancel"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:background="@drawable/common_primary_thin_round_selector"
        android:ellipsize="middle"
        android:maxWidth="135dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:singleLine="true"
        android:text="@string/common_cancel"
        android:textAllCaps="false"
        android:textColor="#379BFF"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/destroy_dialog_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/destroy_dialog_notice" />

</androidx.constraintlayout.widget.ConstraintLayout>