<?xml version="1.0" encoding="utf-8"?>
<com.bcm.messenger.common.ui.InputAwareLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <com.bcm.messenger.common.ui.CommonTitleBar2
        android:id="@+id/note_editor_title_bar"
        style="@style/CommonTitleBarStyle"
        app:right_type="image"
        app:right_image="@drawable/common_more_black_icon"
        app:center_text=""
        android:focusable="true"
        android:focusableInTouchMode="true"/>

    <EditText
        android:id="@+id/note_edit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="20dp"
        android:textSize="16sp"
        android:gravity="top|left"
        android:textColor="@color/common_color_black"
        android:text=""
        android:background="@null"
        android:layout_below="@id/note_editor_title_bar"/>

</com.bcm.messenger.common.ui.InputAwareLayout>