<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop= "10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:paddingTop="17dp"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="15dp"
    android:orientation="vertical"
    android:background="@drawable/me_note_cell_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/note_cell_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="17sp"
        android:textColor="@color/common_color_black"
        android:lineSpacingExtra="1dp"
        android:text=""
        android:maxLines="2"/>

    <TextView
        android:id="@+id/note_cell_timestamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:drawableEnd="@drawable/me_note_item_16_pin_icon"
        android:ellipsize="end"
        android:text=""
        android:textSize="13sp"
        android:textColor="#A8A8A8"
        android:maxLines="1"
        android:gravity="left"/>

</LinearLayout>