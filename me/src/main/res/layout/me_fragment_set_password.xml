<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/input_pin_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_color_transparent"
    android:visibility="visible"
    tools:background="@drawable/me_login_bg">

    <ImageView
        android:id="@+id/set_password_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_horizontal_gap"
        android:layout_marginTop="30dp"
        android:padding="8dp"
        android:src="@drawable/common_back_arrow_white_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/set_password_header"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="28dp"
        android:text="@string/me_text_set_password"
        android:textColor="@color/common_color_white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_password_back" />

    <com.bcm.messenger.common.ui.ClearButtonEditText
        android:id="@+id/new_password_edit"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/me_register_input_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="left|center_vertical"
        android:hint="@string/me_enter_password_hint"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:textColor="@color/common_color_white"
        android:textColorHint="#7fffffff"
        android:textCursorDrawable="@drawable/common_white_color_cursor"
        android:textSize="14sp"
        app:clearButtonHeight="12dp"
        app:clearButtonPadding="10dp"
        app:clearButtonResource="@drawable/common_input_clear_icon"
        app:clearButtonWidth="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/set_password_tip"
        app:paddingEnd="15dp"
        app:showClearButton="true" />

    <com.bcm.messenger.common.ui.ClearButtonEditText
        android:id="@+id/confirm_psw_edit"
        android:layout_width="225dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/me_register_input_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="left|center_vertical"
        android:hint="@string/me_re_enter_password_hint"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:singleLine="true"
        android:textColor="@color/common_color_white"
        android:textColorHint="#7fffffff"
        android:textCursorDrawable="@drawable/common_white_color_cursor"
        android:textSize="14sp"
        app:clearButtonHeight="12dp"
        app:clearButtonPadding="10dp"
        app:clearButtonResource="@drawable/common_input_clear_icon"
        app:clearButtonWidth="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_password_edit"
        app:paddingEnd="15dp"
        app:showClearButton="true" />

    <ImageView
        android:id="@+id/set_new_password_done_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:src="@drawable/me_next_black_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_psw_edit" />

    <TextView
        android:id="@+id/set_password_tip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/me_default_password_content"
        android:textColor="@color/common_color_white"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/set_password_header" />

</androidx.constraintlayout.widget.ConstraintLayout>