<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.bcm.messenger.common.ui.CommonTitleBar2
        android:id="@+id/force_logout_title_bar"
        style="@style/CommonTitleBarStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/force_logout_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/me_destroy_force_logout_title"
        android:textColor="@color/common_color_black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="left"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/force_logout_title_bar" />

    <TextView
        android:id="@+id/force_logout_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="45dp"
        android:gravity="left"
        android:text="@string/me_destroy_force_logout_content"
        android:textColor="@color/common_color_black_60"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/force_logout_title" />


    <TextView
        android:id="@+id/force_logout_understand_btn"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginBottom="101dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:gravity="center"
        android:background="@drawable/common_blue_bg"
        android:text="@string/common_understood"
        android:textColor="@color/common_color_white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/force_logout_destroy_btn"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:text="@string/me_destroy_account_str"
        android:textColor="@color/common_content_warning_color"
        android:textSize="14sp"
        android:gravity="center"
        android:background="@drawable/common_white_bg"
        app:layout_constraintTop_toBottomOf="@id/force_logout_understand_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>