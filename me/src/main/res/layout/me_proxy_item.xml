<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="60dp"
    android:padding="15dp"
    android:orientation="vertical"
    android:background="@drawable/common_item_ripple_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/proxy_select"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        android:src="@drawable/common_checkbox_selected"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:id="@+id/proxy_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:maxLength="30"
            android:textSize="17sp"
            android:textColor="?attr/common_text_main_color"
            android:gravity="center_vertical"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/proxy_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="?attr/common_text_secondary_color"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>